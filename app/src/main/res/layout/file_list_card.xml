<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/file_list_dialog"
    android:theme="@style/AppTheme.NoActionBar">



        <TextView
            android:id="@+id/id_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:text="Selected Documents"
            android:textAlignment="center"
            android:textSize="30dp" />

    <ListView
        android:id="@+id/id_doc"
        android:layout_width="wrap_content"
        android:layout_height="329dp"
        android:layout_below="@id/id_title"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="64dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="65dp"
        android:textAlignment="center"
        android:background="@color/mycolorGrey"/>


    <Button
        android:id="@+id/btn_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_doc"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="103dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="63dp"

        android:layout_toStartOf="@+id/btn_no"
        android:text="Yes" />

    <Button
        android:id="@+id/btn_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_doc"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity=""
        android:layout_marginTop="44dp"
        android:layout_marginEnd="85dp"
        android:layout_marginBottom="62dp"

        android:text="No" />


</RelativeLayout>